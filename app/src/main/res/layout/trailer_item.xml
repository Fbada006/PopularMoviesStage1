<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_trailers"
    android:layout_width="@dimen/trailer_item_width"
    android:layout_height="@dimen/trailer_item_height"
    android:layout_margin="8dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/iv_trailer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/trailer"
        android:src="@drawable/ic_local_movies" />

    <ImageView
        android:id="@+id/iv_trailer_play"
        android:layout_width="@dimen/trailer_play_dimension"
        android:layout_height="@dimen/trailer_play_dimension"
        android:layout_gravity="center"
        android:clickable="true"
        android:contentDescription="@string/play_trailer"
        android:focusable="true"
        android:foregroundGravity="center"
        android:src="@drawable/ic_play" />
</FrameLayout>