<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/movie_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_item_image_height"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_of_movie"
        android:padding="@dimen/movie_small_padding"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="serif"
        android:maxLines="2"
        android:padding="@dimen/movie_item_title_padding"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textColor="@android:color/black"
        tools:text="Awesome movie" />
</LinearLayout>